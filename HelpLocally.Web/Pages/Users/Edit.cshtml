@page "{id:int}"
@model EditModel

@await Html.PartialAsync("_NavigationPartial", "users")

<form method="post">
    <input type="hidden" asp-for="User.Id"/>
     <div class="form-group">
         <label asp-for="User.Login"></label>
         <input asp-for="User.Login" class="form-control"/>
     </div>
     <div class="form-group">
         <label asp-for="User.Role"></label>
         <select asp-for="User.Role" asp-items="Model.Roles" class="form-control"></select>
     </div>
     <div class="form-group">
         <label asp-for="User.Company"></label>
         <select asp-for="User.CompanyId" asp-items="Model.Companies" class="form-control"></select>
     </div>
    <button class="btn btn-primary">Zapisz</button>
</form>
